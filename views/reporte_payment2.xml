<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_account_payment2">
        <t t-call="web.html_container">
          <t t-set="data_report_margin_top" t-value="1"/>
          <t t-set="data_report_header_spacing" t-value="1"/>
          <t t-set="data_report_dpi" t-value="110"/>
            <t t-foreach="docs" t-as="o">
                <div class="article">
                  <div class="page">
                     <div style="font-size: 95%; position: absolute; top: 3.4cm; left: 5cm">
                            GUATEMALA, <span t-esc="fecha_larga(o.date).upper()"/>
                        </div>
                      <div style="font-size: 110%; position: absolute; top: 3.4cm; left: 19.8cm">
                          ***<span t-esc="'{0:,.2f}'.format(o.amount)"/>***
                      </div>
                      <div style="font-size: 110%; position: absolute; top: 4.2cm; left: 5.1cm; width: 18.5cm">
                          <span t-esc="o.nombre_impreso or o.partner_id.name.upper()"/>
                      </div>
                      <div style="font-size: 110%; text-transform: uppercase; position: absolute; top: 5cm; left: 4.3cm; width: 20cm">
                          <span t-esc="a_letras(o.amount)"/>
                      </div>
                      <div t-if="o.no_negociable == True" style="font-size: 130%; position: absolute; top: 7.3cm; left: 3.6cm; font-weight: bold">
                          <span>NO  NEGOCIABLE</span>
                      </div>
                      <div style="font-size: 120%; position: absolute; top: 1cm; left: 3cm">
                          <span> INDULOGIC ADMON.</span>
                      </div>
                      <div style="font-size: 120%; position: absolute; top: 1cm; left: 17cm">
                          <span> CH N*</span>
                      </div>
                      <div style="font-size: 120%; position: absolute; top: 1cm; left: 19.5cm; fon-weight: bold; border-bottom: 2px solid; width: 8cm; text-align: center">
                          <span t-esc="o.check_number"/>
                      </div>
                      <div style="font-size: 120%; position: absolute; top: 17cm; left: 3cm; font-weight: bold; border-top: 2px solid; width: 10cm; text-align: center">
                          <span>AUTORIZADO</span>
                      </div>
                      <div style="font-size: 120%; position: absolute; top: 17cm; left: 18cm; font-weight: bold; border-top: 2px solid; width: 10cm; text-align: center">
                          <span>RECIBIDO</span>
                      </div>
                      
                      <div style="position: absolute; top: 10cm; left: 3cm; font-size: 110%">
                          <table style="border:2px solid black" class="table table-sm table-borderless">
                              <tbody>
                                  <tr>
                                    <td style="width: 4cm; text-align: center; border:2px solid black"><b>CUENTA</b></td>
                                    <td style="width: 13cm; text-align: center; border:2px solid black"><b>PARTIDA</b></td>
                                    <td style="width: 4cm; text-align: center; border:2px solid black"><b>DEBE</b></td>
                                    <td style="width: 4cm; text-align: center; border:2px solid black"><b>HABER</b></td>
                                  </tr>
                                  <tr t-foreach="o.move_id.line_ids" t-as="l">
                                      <td style="width: 4cm; border-right: 2px solid black; padding-left:10px">
                                          <span t-field="l.account_id.code"/>
                                      </td>
                                      <td style="width: 13cm; border-right: 2px solid black; padding-left:10px">
                                          <span t-field="l.account_id.name"/>
                                      </td>
                                      <td style="width: 1.7cm; border-right: 2px solid black; text-align: right; padding-rigth:10px">
                                          <span t-field="l.debit" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id}"/>
                                      </td>
                                      <td style="width: 2cm; text-align: right; padding-rigth:10px">
                                          <span t-field="l.credit" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id}"/>
                                      </td>
                                  </tr>
                                  <tr>
                                    <td colspan="2" style="border:2px solid black">TOTAL:</td>
                                    <td style="width: 1.7cm; border:2px solid black; text-align: right; padding-rigth:10px">
                                      <span t-esc="totales(o)['debito']" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id}"/>
                                    </td>
                                    <td style="width: 2cm; border:2px solid black; text-align: right; padding-rigth:10px">
                                      <span t-esc="totales(o)['credito']" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id}"/>
                                    </td>
                                  </tr>
                                  <tr>
                                      <td colspan="4" style="border:2px solid black; height: 40px">DESCRIPCION:<span t-esc="o.descripcion"/></td>
                                  </tr>
                              </tbody>
                          </table>
                      </div>
                      
                    </div>
              </div>
            </t>
        </t>
    </template>
</odoo>
